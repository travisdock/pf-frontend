{
  "name": "pf-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "billboard.js": "^1.9.5",
    "connected-react-router": "^4.5.0",
    "coveralls": "^3.0.6",
    "match-sorter": "^4.0.1",
    "mathjs-expression-parser": "^1.0.2",
    "merge": "^1.2.1",
    "node-pre-gyp": "^0.13.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-redux": "^5.1.1",
    "react-router-dom": "^5.0.1",
    "react-scripts": "^3.1.1",
