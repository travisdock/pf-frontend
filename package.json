  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "browserslistComment": [
    "this is used when starting development in chrome"
  ],
  "jest": {
    "snapshotSerializers": [
